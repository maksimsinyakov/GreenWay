<h1>Listing cars</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Brand</th>
    <th>Model</th>
    <th>Reg</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.id %></td>
    <td><%= car.brand %></td>
    <td><%= car.model %></td>
    <td><%= car.reg %></td>
    <td><%= car.color %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

